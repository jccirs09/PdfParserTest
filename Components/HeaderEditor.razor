@using PickingListApp.DTOs
@using MudBlazor

@if (PickingList != null)
{
    <EditForm Model="PickingList">
        <MudGrid>
            <MudItem xs="12" sm="6" md="4">
                <MudTextField @bind-Value="PickingList.SalesOrderNumber" Label="Sales Order #" Disabled="@IsReadOnly" />
                <MudTextField @bind-Value="PickingList.Buyer" Label="Buyer" Disabled="@IsReadOnly" Margin="Margin.Dense" />
                <MudTextField @bind-Value="PickingList.JobName" Label="Job Name" Disabled="@IsReadOnly" Margin="Margin.Dense" />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudDatePicker @bind-Date="PickingList.ShipDate" Label="Ship Date" Disabled="@IsReadOnly" />
                <MudDatePicker @bind-Date="PickingList.OrderDate" Label="Order Date" Disabled="@IsReadOnly" Margin="Margin.Dense" />
                <MudTextField T="DateTime?" @bind-Value="PickingList.PrintDateTime" Label="Print Date/Time" Disabled="@IsReadOnly" Margin="Margin.Dense" Format="s" />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudTextField @bind-Value="PickingList.PurchaseOrderNumber" Label="Purchase Order #" Disabled="@IsReadOnly" />
                <MudTextField @bind-Value="PickingList.SalesRep" Label="Sales Rep" Disabled="@IsReadOnly" Margin="Margin.Dense" />
                <MudTextField @bind-Value="PickingList.ShipVia" Label="Ship Via" Disabled="@IsReadOnly" Margin="Margin.Dense" />
            </MudItem>
        </MudGrid>
    </EditForm>
}

@code {
    [Parameter]
    public PickingListDto? PickingList { get; set; }

    [Parameter]
    public bool IsReadOnly { get; set; }
}
